First modify the multipath.conf file 
n.b. : just remove hash from defaults conditions of the multipath.conf file.

#vim /usr/share/doc/device-mapper-multipath-0.4.9/multipath.conf
defaults {
        user_friendly_names yes
        find_multipaths yes
}
##
## Here is an example of how to configure some standard options.
##
#
defaults {
        polling_interval        10
        path_selector           "round-robin 0"
        path_grouping_policy    multibus
        uid_attribute           ID_SERIAL
        prio                    alua
        path_checker            readsector0
        rr_min_io               100
        max_fds                 8192
        rr_weight               priorities
        failback                immediate
        no_path_retry           fail
        user_friendly_names     yes
}

THEN copy the same file to /etc/
# cp -pr /usr/share/doc/device-mapper-multipath-0.4.9/multipath.conf /etc/
#systemctl start multipathd.service
#systemctl status multipathd.service
#systemctl enable multipathd.service

N.B.: to get /etc/multipath/bindings
NOTE: this file is automatically maintained by the multipath program.


[root@wbcrmdb1 ~]# cat /var/lib/multipath/bindings

 ****Found duplicate PV' warnings when using LVM with multipath storage in RHEL****
# vi /etc/lvm/lvm.conf
# This configuration option has an automatic default value.
# filter = [ "a|.*/|" ]
>>> add/replace filter line here
filter =  [ "a|/dev/sda[1-9]|", "a|/dev/mapper/mpath|", "r|.*|" ]

# This configuration option has an automatic default value.
# global_filter = [ "a|.*/|" ]
>>> add/replace global_filter line here
global_filter =  [ "a|/dev/sda[1-9]|", "a|/dev/mapper/mpath|", "r|.*|" ]

To test the change on the fly :
# lvs --config 'devices{ filter =  [ "a|/dev/sda[1-9]|", "a|/dev/mapper/mpath|", "r|.*|" ] global_filter =  [ "a|/dev/sda[1-9]|", "a|/dev/mapper/mpath|", "r|.*|" ] }'
